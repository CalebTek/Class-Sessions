Distance between two points

#!csharp

static double DistPoint(double x0, double y0, double x1, double y1)
{
    double dx = x1 - x0, dy = y1 - y0;
    double dist = Math.Sqrt(Pow(dx,2) + Pow(dy,2));
    return dist;
}
