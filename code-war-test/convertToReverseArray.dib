#!csharp

long[] arr = {1,2,3,4,5};
long average,sum = 0;
if (arr.Length == 0)
{
    average = 0;
} else
{
    for(int i = 0; i < arr.Length; i++)
    {
        sum += arr[i];
    }
    average = sum/arr.Length;
}

Console.Write(average);

